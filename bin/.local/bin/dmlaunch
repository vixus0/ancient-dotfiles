#!/usr/bin/bash

n_bg="#151515"
n_fg="#d0d0d0"
s_bg="#a7d32c"
s_fg="#000000"

dm() {
  dmenu \
    -nb $n_bg -nf $n_fg -sb $s_bg -sf $s_fg
}

penta() {
  xdotool search --name mozilla \
    windowactivate --sync \
    type "$@"
}

focus() {
  xdotool search --name "$@" windowactivate
}

# dmenu fav prog launcher
outp="$(dmenu_path | dm)"
pre="${outp:0:1}"
cmd="${outp:1}"


case $pre in
  "#")
    ${TERMEMU:-termite} -e "$cmd" &
    ;;
  "'")
    penta "$cmd" &
    ;;
  ",")
    focus "$cmd" &
    ;;
  *)
    $outp
    ;;
esac
