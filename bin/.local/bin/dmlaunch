#!/usr/bin/bash

prompt="Â»"
font="xft:sans:size=16"
n_bg="#151515"
n_fg="#d0d0d0"
s_bg="#a7d32c"
s_fg="#000000"

dm() {
  dmenu \
    -nb "$n_bg" -nf "$n_fg" -sb "$s_bg" -sf "$s_fg" \
    -fn "$font" -p "$prompt"
}

penta() {
  xdotool search --name mozilla \
    windowactivate --sync \
    type "$@" >/dev/null 2>&1
}

focus() {
  xdotool search --name "$@" windowactivate >/dev/null 2>&1
}

process() {
  local arg="$@"
  local pre="$1"

  shift 1
  local cmd="$@"

  case $pre in
    "!t")
      ${TERMEMU:-termite} -e "$cmd" &
      ;;
    "!f")
      penta "$cmd" &
      ;;
    "!w")
      focus "$cmd" &
      ;;
    "!p")
      $cmd $(xclip -o) &
      ;;
    *)
      $arg >/dev/null 2>&1 &
      ;;
  esac
}

clearline() {
  clear
  echo -n "> "
}

# dmenu fav prog launcher
if test "--interactive" = "$1"; then
  clearline
  while read line; do
    process $line
    clearline
  done
else
  outp="$(dmenu_path | dm)"
  process $outp
fi
