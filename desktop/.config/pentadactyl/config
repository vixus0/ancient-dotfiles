"settings
set runtimepath=~/.config/pentadactyl
set editor='gvim +<line> <file>'
set defsearch=d
set guioptions=s
set hlfind
set titlestring="Mozilla Firefox"

"fx settings
set! browser.frames.enabled=false
set! browser.tabs.selectOwnerOnClose=true

"plugins
loadplugins

"user
group user

"binds
map -count -modes=n,v J <count>gT
map -count -modes=n,v K <count>gt
nmap gr :set usermode!<CR>
nmap gj :set showtabline!=always,never<CR>
nmap gk :extdisable Pentadactyl<CR>
nmap gs :set guioptions!=Tr | reload<CR>
nmap U :tabmove -1<CR>
nmap I :tabmove +1<CR>
nmap -b h 5h
nmap -b j 5j
nmap -b k 5k
nmap -b l 5l

"mse for youtube's html5 in HD
set! media.mediasource.enabled=true
set! media.mediasource.webm.enabled=true
set! media.mediasource.ignore_codecs=true
set! media.mediasource.mp4.enabled=true
set! media.mediasource.mp4.*=true
set! media.mediasource.mp4.use-blank-decoder=false
set! media.fragmented-mp4.exposed=true
set! media.fragmented-mp4.ffmpeg=true
set! media.fragmented-mp4.gmp=true
set! media.fragmented-mp4.use-blank-decoder=false

"safe ssl negotiation
set! security.ssl.require_safe_negotiation=false
set! security.ssl.treat_unsafe_negotiation_as_broken=false
set! security.tls.version.min=1

"make wikipedia use mobile view
autocmd PageLoadPre ([a-z]{2}).wikipedia.org urlrewrite "//([a-z]{2})\.w" "//$1.m.w"

"chrome
source '~/.config/pentadactyl/chrome.css'

"colors
colorscheme gruvbox

" vim: ft=vim
