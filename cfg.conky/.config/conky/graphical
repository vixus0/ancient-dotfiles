TEXT
${voffset 1}\
  \
${color4}${font}${nodename_short} ${color8}${kernel}\
    \
${color2}${font}${desktop}    ${color}${exec herbstclient get_attr clients.focus.class} ${color8}${scroll 60 2 ${exec herbstclient get_attr clients.focus.title}}\
    \
${alignr}\
${color1}${font}${execi 60 checkupdates | wc -l}\
    \
${alignr}\
${if_up wlan0}\
${color5}${font}${execi 10 connmanctl services | awk '/^*/ {print $2;exit}'}\
    \
${endif}\
${if_up wls3}\
${color5}${font}${execi 10 connmanctl services | awk '/^*/ {print $2;exit}'}\
    \
${endif}\
${alignr}\
${if_existing /sys/class/power_supply/BAT0}\
${if_match ${battery_percent} > 20}\
${color3}${font}${battery_short}\
${else}\
${color1}${font}${battery_short}\
${endif}\
    \
${endif}\
${alignr}\
${color4}${font}${execi 1 amixer get Master -M | awk '/dB]/ {print $(NF-2)$NF; exit}'}\
    \
${alignr}\
${offset -14}\
${color8}${font}${time %a %d %b} ${color}${time %H:%M}
