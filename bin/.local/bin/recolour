#!/usr/bin/env bash

# 
# Desktop switcher that also sets a root colour
#

colors=(
"-solid #83a598"
"-solid #689d6a"
"-solid #d3869b"
"-solid #fabd2f"
)

xdo="xdotool"

# Desktop stuff
test "$1" = "move" && xdo="$xdo getactivewindow set_desktop_for_window $2"
$xdo set_desktop $2 &

# Background stuff
if test -f "$HOME/.recolour"; then
  colors=()
  while read -r line; do
    colors+=( "$line" )
  done < "$HOME/.recolour"
fi

nc=${#colors[@]}
c=$(( $2 > 0 ? $2 : 0 ))
c=$(( $c < $nc ? $c : $c % $nc ))

hsetroot ${colors[$c]}
