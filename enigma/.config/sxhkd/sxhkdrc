super + shift + Escape
  pkill -SIGUSR1 sxhkd

super + {8,9,0}
  chvol {mute,down,up}

super + Return 
  termite -e fish

super + space
  dmlaunch

super + F5
  mkdir -p ~/shots/ && scrot -e 'mv $f ~/shots/'

XF86MonBrightness{Up,Down}
  xbacklight -{inc,dec} 10

super + Pause
  blurlock

super + Home
  xdotool mousemove 3000 3000


#
# bspwm hotkeys
#

# quit bspwm
super + alt + Escape
	bspc quit && rm -f /tmp/bspwm_started

# close/kill window
super + {_,shift + }w
	bspc node --{close,kill}

# toggle tiled/monocle layout
super + m
	bspc desktop --layout next

# balance split
super + equal
	bspc node --balance

# change window state
super + {t,s,f}
	bspc node --state {tiled,floating,fullscreen}

# set window layer
super + {Prior,Next,shift + Prior,shift + Next}
  bspc node --layer {above,below,normal,normal}

# focus previous window or desktop
super + {grave,Tab}
	bspc {node,desktop} --focus last

# swap the previous window with the current one
super + apostrophe
	bspc window --swap last

# swap current window with biggest one
super + g
	bspc node --swap biggest

super + {_, shift + }r
  bspc node --rotate 90

super + {_,shift + }{h,j,k,l}
	bspc node --{focus,swap} {west,south,north,east}

super + bracket{left,right}
	bspc desktop --focus {prev,next}

super + ctrl + {h,j,k,l}
	bspc node --presel-dir ~{west,south,north,east}

super + ctrl + {1-9}
	bspc node --presel-ratio 0.{1-9}

super + {_,shift + }{1-9,0}
	bspc {desktop --focus,node --to-desktop} ^{1-9,10}

super + brace{left,right}
  bspc node --flip {horizontal,vertical}

~button1
	bspc pointer -g focus

super + button{1-3}
	; bspc pointer -g {move,resize_side,resize_corner}

super + @button{1-3}
	bspc pointer -u
