#!/bin/bash

favf=${FAVPROGS:-$HOME/.local/share/favprogs}

dzen() {
  nf=$1
  dzen2 -p \
    -l $nf \
    -e 'onstart=uncollapse;button1=menuexec;leaveslave=exit' \
    -w 80 -x 0 -y 80 \
    -ta c -sa c
}

# For favourites menu
wco=( `wc -l $favf` )
nfav=$(( ${wco[0]} + 1 ))

(echo; cat $favf; echo) | dzen $nfav
