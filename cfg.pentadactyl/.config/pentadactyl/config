"settings
set runtimepath=~/.config/pentadactyl
set editor='termite -e "vim +<line> <file>"'
set defsearch=d
set guioptions=s
set hlfind


"plugins
loadplugins '\.(js|penta)$'


"user
group user


"chrome
source '~/.config/pentadactyl/chrome.css'


"colors
colorscheme base16


"binds
map -count -modes=n,v J <count>gT
map -count -modes=n,v K <count>gt
nmap gk :extdisable Pentadactyl<CR>
nmap U :tabmove -1<CR>
nmap I :tabmove +1<CR>
nmap -b h 5h
nmap -b j 5j
nmap -b k 5k
nmap -b l 5l


"no iframes
set! browser.frames.enabled=false


"tab closing
set! browser.tabs.selectOwnerOnClose=true


"safe ssl negotiation
set! security.ssl.require_safe_negotiation=false
set! security.ssl.treat_unsafe_negotiation_as_broken=false
set! security.tls.version.min=1


"except for shit websites
"group badssl -description "Websites using outdated software" -locations akamaihd.net
"set! security.ssl.require_safe_negotiation=false
"set! security.ssl.treat_unsafe_negotiation_as_broken=false
