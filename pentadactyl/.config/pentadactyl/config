"1.1

loadplugins '\.(js|penta)$'
group user

"settings
set hintkeys=asdfghjkl

"colors
colorscheme desert

"binds
map -count -modes=n,v J <count>gT
map -count -modes=n,v K <count>gt

"open urls in mpv
js <<EOF
let tags = ["a"];
let mpv = function(e) dactyl.execute("!urxvtc -e mpv '"+e.href+"'")
hints.addMode("m", "Open link in mpv", mpv, null, tags);
EOF

"open urls in mpv over ssh
js <<EOF
let remote = "vixlap-lan";
let tags = ["a"];
let mpvr = function(e) dactyl.execute("!urxvtc -e ssh "+remote+" -t DISPLAY=:0 mpv '"+e.href+"'")
hints.addMode("M", "Open link in mpv remotely", mpvr, null, tags);
EOF

" vim: set ft=pentadactyl:
