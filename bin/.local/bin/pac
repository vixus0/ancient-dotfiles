#!/usr/bin/env bash

cmd=$1
shift 1

case $cmd in
  ins*)
    sudo pacman -S "$@" ;;

  rm)
    sudo pacman -Rnssc "$@" ;;

  inf*)
    pacman -Qi "$@" ;;

  fet*)
    pacman -Si "$@" ;;

  fin*)
    pacman -Ss "$@" ;;

  own)
    pacman -Qo "$@" ;;

  fil*)
    pacman -Ql "$@" ;;

  che*)
    pacman -Qs "$@" ;;

  upd*)
    sudo pacman -Syyu ;;

  ls)
    pacman -Qqe ;;

  aur)
    pacman -Qqm ;;

  lsv)
    pacman -Qe ;;

  aurv)
    pacman -Qm ;;

  *)
    echo "pac: install rm info fetch find own files check update ls aur lsv aurv"
    ;;
esac
