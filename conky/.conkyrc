alignment top_left
background no
own_window_transparent yes
border_width 1
cpu_avg_samples 2
default_bar_size 48 3
default_color white
default_outline_color white
default_shade_color white
draw_borders no
draw_graph_borders yes
draw_outline no
draw_shades no
use_xft yes
xftfont Munro Small:size=7.5:antialias=false
gap_x 4
gap_y -2
minimum_size 5 5
net_avg_samples 2
double_buffer yes
out_to_console no
out_to_stderr no
extra_newline no
own_window yes
own_window_class Conky
own_window_type desktop
stippled_borders 0
update_interval 1.0
uppercase no
use_spacer none
show_graph_scale no
show_graph_range no

color0  1e2d33
color1  802828
color2  a22814
color3  b27d12
color4  1e5673
color5  642337
color6  196271
color7  99b3bd
color9  334d57

TEXT
${font Yama Moto:size=22}${time %H} ${color2}${time %M} \
${voffset -10}${font}${color}\
${tab 60}${time %a} \
${tab 100}Bat \
${tab 100}Disk \
${tab 100}Mem \
${tab 100}Vol \
${tab 80}${wireless_essid wls3}
${color2}\
${tab 120}${time %d %b %y} \
${tab 100}${battery_time} \
${tab 100}${fs_bar /} \
${tab 100}${membar} \
${tab 100}${ibm_volume} \
${tab 80}${wireless_link_bar 3,48 wls3}
