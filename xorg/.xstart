#!/bin/bash
#
# Autostart file for X server 

# Host specific stuff
case `hostname` in
  vix60)
    # Set gamma correction
    xgamma -gamma 1.25 &
    # Assign tablet buttons
    sudo setkeycodes 67 42 6c 29 68 125 6b 56 71 103 6f 108 6e 105 6d 106 69 28 &
    ;;
esac

# rxvt-unicode daemon
urxvtd -q -f -o &

# set wallpaper with feh
feh --bg-center ~/.wallpaper

# dzen applets
~/scripts/statdzen &

# composite manager
xcompmgr &
